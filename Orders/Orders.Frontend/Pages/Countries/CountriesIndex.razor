@page "/countries"

<h3>Países</h3>

<div class="mb-3">
    <a class="btn btn-primary" href="/countries/create">Novo país</a>
</div>


<GenericList MyList="Countries">
    <Body>
        <table class="table table-striped">
            <thead>
                <tr>
                    <th>País</th>
                    <th>Distritos</th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var country in Countries!)
                {
                    <tr>
                        <td>@country.Name</td>
                        <td>@country.StatesNumber</td>
                        <td>
                            <a href="/countries/edit/@country.Id" class="btn btn-sm btn-warning">Editar</a>
                            <a href="/countries/details/@country.Id" class="btn btn-sm btn-info">Detalhes</a>
                            <button @onclick=@(() => DeleteAsync(country)) class="btn btn-sm btn-danger">Apagar</button>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </Body>
</GenericList>